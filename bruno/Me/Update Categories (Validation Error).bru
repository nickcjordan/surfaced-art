meta {
  name: Update Categories (Validation Error)
  type: http
  seq: 6
}

put {
  url: {{sa_baseUrl}}/me/categories
  body: json
  auth: bearer
}

auth:bearer {
  token: {{sa_authToken}}
}

body:json {
  {
    "categories": []
  }
}

assert {
  res.status: eq 400
  res.body.error.code: eq VALIDATION_ERROR
}

tests {
  test("should return 400 for empty categories", function() {
    const body = res.getBody();
    expect(res.getStatus()).to.equal(400);
    expect(body.error.code).to.equal("VALIDATION_ERROR");
  });
}
