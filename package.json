{
  "name": "surfaced-art",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "security:scan": "node scripts/security-scan.cjs",
    "security:npm": "node scripts/security-scan.cjs --npm",
    "security:trivy": "node scripts/security-scan.cjs --trivy",
    "security:semgrep": "node scripts/security-scan.cjs --semgrep",
    "security:dependabot": "node scripts/security-scan.cjs --dependabot",
    "security:pr-reviews": "node scripts/security-scan.cjs --pr-reviews"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^9.0.0",
    "prettier": "^3.5.0",
    "turbo": "^2.4.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": ">=10.2.1",
    "lodash": ">=4.17.23"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
